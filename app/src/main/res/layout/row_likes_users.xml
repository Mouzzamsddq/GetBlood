<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:background="@color/colorBlood"
        android:orientation="horizontal"
        android:id="@+id/userLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            app:civ_border_width="1dp"
            android:id="@+id/likesProfileImageView"
            android:src="@drawable/baseline_account_circle_black_48"/>

        <LinearLayout
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/personNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Person Name"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/colorWhite"/>
            <TextView
                android:id="@+id/personEmailTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Person email"
                android:textColor="@color/colorWhite"
                android:textSize="14sp" />



        </LinearLayout>
        <ImageView
            android:layout_weight="0.1"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/blooddropnew"/>






    </LinearLayout>






</RelativeLayout>
