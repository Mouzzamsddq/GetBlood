<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/frameInfo"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.InfoFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="false"
        android:background="@color/colorBlood">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:gravity="center"
                android:drawableEnd="@drawable/hearts"
                android:layout_gravity="center"
                android:background="@drawable/custombutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlood"
                android:layout_marginTop="10dp"
                android:text="Why Should You Donate Blood?"
                android:textSize="18dp"
                android:padding="10dp"
                android:drawableRight="@drawable/hearts" />

            <TextView
                android:gravity="start"
                android:layout_marginTop="10dp"
                android:background="@drawable/boarder"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/info_"
                android:textSize="16sp"
                android:textColor="@color/colorWhite"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:padding="10dp"/>


            <TextView
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:drawableEnd="@drawable/hearts"
                android:background="@drawable/custombutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/eligibility_"
                android:textColor="@color/colorBlood"
                android:textSize="18sp"
                android:drawableRight="@drawable/hearts" />



            <TextView
                android:gravity="start"
                android:background="@drawable/boarder"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:text="@string/male_"
                android:textSize="16sp"
                android:padding="10dp"/>

            <TextView
                android:gravity="start"
                android:background="@drawable/boarder"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:text="@string/female_"
                android:textColor="@color/colorWhite"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:padding="10dp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Benifits of blood donation"
                android:drawableRight="@drawable/hearts"
                android:background="@drawable/custombutton"
                android:layout_gravity="center"
                android:padding="10dp"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorBlood"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:layout_gravity="center"
                android:background="@drawable/boarder"
                android:text="To know more about benifits of blood dontaion, eligibility of blood donation and process of blood donation so you can watch this video:-"/>

            <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
                android:id="@+id/youtube_player_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/boarder"

                android:layout_marginBottom="50dp"
                android:layout_marginTop="40dp"
                android:padding="10dp"


                app:videoId="ku0zMBVjjAs"
                app:autoPlay="true"
                app:showFullScreenButton="true" />







        </LinearLayout>



    </ScrollView>


</FrameLayout>